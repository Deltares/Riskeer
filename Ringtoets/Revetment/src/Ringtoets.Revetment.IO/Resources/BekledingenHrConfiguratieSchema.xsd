<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <!--Basis elementen voor een bekledingen configuratie.-->
  <xs:include schemaLocation="BekledingenHrConfiguratieSchemaBasis.xsd" />

  <!--Herdefinieer berekening, zodat deze de juiste inhoud heeft.-->
  <xs:redefine schemaLocation="ConfiguratieSchema.xsd">
    <xs:complexType name="berekeningType">
      <xs:complexContent>
        <xs:extension base="berekeningType">
          <xs:all>
            <xs:element ref="hrlocatie" minOccurs="0"/>
            <xs:element ref="bovengrensbekleding" minOccurs="0"/>
            <xs:element ref="ondergrensbekleding" minOccurs="0"/>
            <xs:element ref="bovengrenswaterstanden" minOccurs="0"/>
            <xs:element ref="ondergrenswaterstanden" minOccurs="0"/>
            <xs:element ref="stapgrootte" minOccurs="0"/>
            <xs:element ref="voorlandprofiel" minOccurs="0"/>
            <xs:element ref="orientatie" minOccurs="0"/>
            <xs:element ref="golfreductie" minOccurs="0"/>
            <xs:element ref="categoriegrens" minOccurs="0"/>
          </xs:all>
        </xs:extension>
      </xs:complexContent>
    </xs:complexType>
  </xs:redefine>

  <!--Specificeert de categoriegrens waarmee de berekening uitgevoerd moet worden.-->
  <xs:element name="categoriegrens">
    <xs:simpleType>
      <xs:restriction base="xs:string">
        <xs:enumeration value="A+-A"/>
        <xs:enumeration value="A-B"/>
        <xs:enumeration value="B-C"/>
        <xs:enumeration value="C-D"/>
      </xs:restriction>
    </xs:simpleType>
  </xs:element>
</xs:schema>