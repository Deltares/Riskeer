<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <!--Hoofdelement waarin alle stochasten kunnen worden opgenomen. 
  Restrictie per stochast is dat de naam alleen mag voorkomen in de lijst 
  gedefinieerd door het "nameType" type en ook maximaal 1 keer mag 
  voorkomen in een berekening.-->
  <xs:element name="stochasten">
    <xs:complexType>
      <xs:choice minOccurs="0" maxOccurs="unbounded">
        <xs:element ref="stochast"/>
      </xs:choice>
    </xs:complexType>
    <xs:unique name="uniqueStochastNameConstraint">
      <xs:selector xpath="stochast"/>
      <xs:field xpath="@naam"/>
    </xs:unique>
  </xs:element>

  <!--Algemene definitie van een stochast, waarbij een verplichte 
  verwachtingswaarde moet worden gedefinieerd en daarnaast optioneel 
  een standaardafwijking of variatiecoefficient kan worden gegeven.-->
  <xs:element name="stochast">
    <xs:complexType>
      <xs:all>
        <xs:element minOccurs="0" ref="verwachtingswaarde"/>
        <xs:element minOccurs="0" ref="standaardafwijking-of-variatiecoefficient"/>
      </xs:all>
      <xs:attribute name="naam" type="nameType" use="required"/>
    </xs:complexType>
  </xs:element>

  <!--Dit type definieert de toegestane namen van de stochasten die 
  kunnen worden opgenomen. Bij gebruik van deze generieke xsd moet 
  dit type worden geherdefinieerd (in deze basisimplementatie worden 
  alle strings goedgekeurd).-->
  <xs:simpleType name="nameType">
    <xs:restriction base="xs:string"/>
  </xs:simpleType>

  <!--Element definitie voor het opgeven van een verwachtingswaarde.-->
  <xs:element name="verwachtingswaarde">
    <xs:simpleType>
      <xs:restriction base="xs:double"/>
    </xs:simpleType>
  </xs:element>

  <!--Specificeert de keus van een standaardafwijking of een variatiecoefficient.-->
  <xs:element name="standaardafwijking-of-variatiecoefficient" abstract="true" />
  
</xs:schema>