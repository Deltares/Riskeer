<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <!--Generieke definitie van het hoogste element in een bestand waarin alle 
  berekeningen en mappen kunnen worden opgenomen.-->
  <xs:element name="configuratie">
    <xs:complexType>
      <xs:choice minOccurs="0" maxOccurs="unbounded">
        <xs:element ref="berekening"/>
        <xs:element ref="map"/>
      </xs:choice>
    </xs:complexType>
  </xs:element>

  <!--Definitie van een map die zichzelf recursief kan bevatten, maar ook 
  berekeningen kan bevatten.-->
  <xs:element name="map">
    <xs:complexType>
      <xs:choice minOccurs="0" maxOccurs="unbounded">
        <xs:element ref="berekening"/>
        <xs:element ref="map"/>
      </xs:choice>
      <xs:attribute name="naam" use="required">
        <xs:simpleType>
          <xs:restriction base="xs:string"/>
        </xs:simpleType>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!--Basisdefinitie van een berekening. De berekening maakt gebruik van het 
  berekeningType. Bij definitie van een toetsspoor specifieke berekening 
  behoeft alleen het berekeningType te worden uitgebreid, niet deze berekening zelf.-->
  <xs:element name="berekening" type="berekeningType" />

  <!--Generieke definitie van een berekening, waarin het naam attribuut is opgenomen. 
  Bij opname van een berekening in een toetsspoor specifieke xsd moet dit type 
  worden uitgebreid met alle elementen die een berekening kan bevatten. Daarbij 
  is uitbreiding met de geselecteerde hrlocatie niet nodig.-->
  <xs:complexType name="berekeningType">
    <xs:attribute name="naam" use="required">
      <xs:simpleType>
        <xs:restriction base="xs:string"/>
      </xs:simpleType>
    </xs:attribute>
  </xs:complexType>

</xs:schema>