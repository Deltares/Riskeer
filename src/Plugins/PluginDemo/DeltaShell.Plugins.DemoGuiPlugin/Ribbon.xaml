<UserControl x:Class="DeltaShell.Plugins.DemoGuiPlugin.Ribbon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fluent="clr-namespace:Fluent;assembly=Fluent"
             mc:Ignorable="d" Width="686.4" Height="168" Background="White">
    <UserControl.Resources>
        <ResourceDictionary Source="/Fluent;Component/Themes/generic.xaml"/>
    </UserControl.Resources>
    <fluent:Ribbon Name="RibbonControl" x:FieldModifier="private">
        <fluent:RibbonTabItem Header="Tools" fluent:KeyTip.Keys="T">
            <fluent:RibbonGroupBox Header="WTI">
                <fluent:Button x:Name="ButtonWTIProject" Header="WTI project" Icon="/DeltaShell.Plugins.DemoGuiPlugin;component\Resources\projection-screen.png" Click="ButtonWTIProject_Click" Size="Middle" SizeDefinition="Middle,Small,Small" />
            </fluent:RibbonGroupBox>
        </fluent:RibbonTabItem>
    </fluent:Ribbon>
</UserControl>
