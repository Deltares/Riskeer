<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    xmlns:mainWindow="clr-namespace:Core.Gui.Forms.MainWindow"
                    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Core.Gui;component/Style/Symbols/RiskeerSymbols.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Color x:Key="DeltaresBlue">#008BBF</Color>
    <Color x:Key="DeltaresDarkerBlue">#006F99</Color>
    <Color x:Key="DeltaresSand">#9F9E8E</Color>
    <Color x:Key="Gray">#C6C6C6</Color>
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="MainButtonBarBackground">#F1F1EE</Color>
    <Color x:Key="Transparent">#00FFFFFF</Color>
    <Color x:Key="MainButtonBarPressedButtonBackground">#e4e4df</Color>
    <Color x:Key="MainButtonBarPressedButtonBorder">#d2d2ca</Color>

    <SolidColorBrush x:Key="MainButtonBarBottomBorderBrush" Color="{StaticResource DeltaresSand}" />
    <SolidColorBrush x:Key="MainButtonBarBackgroundBrush" Color="{StaticResource MainButtonBarBackground}" />
    <SolidColorBrush x:Key="MainButtonBarPressedButtonBackgroundBrush" Color="{StaticResource MainButtonBarPressedButtonBackground}" />
    <SolidColorBrush x:Key="MainButtonBarPressedButtonBorderBrush" Color="{StaticResource MainButtonBarPressedButtonBorder}" />

    <SolidColorBrush x:Key="WindowGlowBrush" Color="{StaticResource Black}" />
    <SolidColorBrush x:Key="WindowOverlayBrush" Color="{StaticResource Black}" Opacity="0.5" />
    <SolidColorBrush x:Key="BackgroundColorBrush" Color="{StaticResource DeltaresSand}" Opacity="0.25" options:Freeze="True" />
    <SolidColorBrush x:Key="WindowTitleColorBrush" Color="{StaticResource DeltaresBlue}" options:Freeze="True" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource DeltaresBlue}" options:Freeze="True" />

    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="{StaticResource White}" Opacity="0.2" />

    <SolidColorBrush x:Key="TransparentBrush" Color="{StaticResource Transparent}" />

    <SolidColorBrush x:Key="DisabledButtonBackgroundBrush" Color="{StaticResource Black}" Opacity="0.15" />
    <SolidColorBrush x:Key="DisabledButtonForegroundBrush" Color="{StaticResource Black}" />

    <SolidColorBrush x:Key="SeparatorBackgroundBrush" Color="{StaticResource DeltaresSand}" Opacity="0.25" />

    <SolidColorBrush x:Key="DeltaresDarkerBlueBrush" Color="{StaticResource DeltaresDarkerBlue}" />
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}" />

    <Style TargetType="mainWindow:MainWindow">
        <Setter Property="GlowBrush" Value="{DynamicResource WindowGlowBrush}" />
        <Setter Property="OverlayBrush" Value="{DynamicResource WindowOverlayBrush}" />
        <Setter Property="WindowTitleBrush" Value="{DynamicResource WindowTitleColorBrush}" />
        <Setter Property="Title" Value="Riskeer" />
        <Setter Property="Icon" Value="../Resources/Riskeer.ico" />
        <Setter Property="TitleAlignment" Value="Center"/>
        <Setter Property="ShowIconOnTitleBar" Value="False" />
        <Setter Property="Height" Value="350" />
        <Setter Property="Width" Value="525" />
    </Style>

    <Style x:Key="PanelBackgroundWindowTitleStyle" TargetType="{x:Type Panel}">
        <Setter Property="Background" Value="{StaticResource WindowTitleColorBrush}" />
        <Style.Triggers>
            <DataTrigger
                Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type metro:MetroWindow}}, Path=IsActive}"
                Value="False">
                <Setter Property="Background"
                        Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type metro:MetroWindow}}, Path=NonActiveBorderBrush}" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>