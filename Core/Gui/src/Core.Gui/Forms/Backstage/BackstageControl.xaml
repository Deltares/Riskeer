<UserControl x:Class="Core.Gui.Forms.Backstage.BackstageControl" 
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:commands="clr-namespace:Core.Gui.Commands"
                   mc:Ignorable="d">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Core.Gui;component/Style/DeltaresStyle.xaml" /> 
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <DockPanel>
            <StackPanel Width="150" DockPanel.Dock="Left" Background="{StaticResource WindowTitleColorBrush}">
                <Button Command="{x:Static commands:MainWindowCommands.ToggleBackstageCommand}">Terug</Button>
                <Separator/>
                <ToggleButton>INFO</ToggleButton>
                <ToggleButton>OPENEN</ToggleButton>
                <Button Command="{x:Static commands:MainWindowCommands.SaveProjectCommand}">Opslaan</Button>
                <Button Command="{x:Static commands:MainWindowCommands.SaveProjectAsCommand}">Opslaan Als</Button>
                <Separator/>
                <ToggleButton>OVER</ToggleButton>
                <Button Command="{x:Static commands:MainWindowCommands.OpenLogFileCommand}">Toon log</Button>
                <Button>Handleiding</Button>
                <Separator/>
                <Button Command="{x:Static commands:MainWindowCommands.CloseApplicationCommand}">Afsluiten</Button>
            </StackPanel>
            
            <Border/>
        </DockPanel>
    </Grid>
</UserControl>
