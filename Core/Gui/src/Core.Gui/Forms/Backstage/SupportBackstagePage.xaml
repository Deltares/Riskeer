<UserControl x:Class="Core.Gui.Forms.Backstage.SupportBackstagePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:backstage="clr-namespace:Core.Gui.Forms.Backstage"
             xmlns:properties="clr-namespace:Core.Gui.Properties"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance IsDesignTimeCreatable=False, Type={x:Type backstage:SupportViewModel}}">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Core.Gui;component/Style/Symbols/Symbols.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Core.Gui;component/Style/DeltaresGeneralStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Core.Gui;component/Style/DeltaresBackstageStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type DockPanel}">
                <Setter Property="Margin" Value="32" />
            </Style>
            <Style TargetType="{x:Type RowDefinition}">
                <Setter Property="MinHeight" Value="28" />
            </Style>
            <Style x:Key="ExplanatoryTextBlockStyle" TargetType="{x:Type TextBlock}">
                <Setter Property="TextWrapping" Value="Wrap" />
                <Setter Property="Margin" Value="0 0 0 8" />
            </Style>
            <Style TargetType="{x:Type Grid}">
                <Setter Property="VerticalAlignment" Value="Top" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBlock DockPanel.Dock="Top" Style="{StaticResource Header1}"
                   Text="{x:Static properties:Resources.Support_DisplayName}" />
         <Grid VerticalAlignment="Stretch">
             <Grid.ColumnDefinitions>
                 <ColumnDefinition Width="580" />
                 <ColumnDefinition Width="*" />
             </Grid.ColumnDefinitions>
             <StackPanel Grid.Column="0" Margin="0 0 32 0">
                 <TextBlock Style="{StaticResource Header2}"
                            Text="{x:Static properties:Resources.SupportBackstagePage_WeCanHelp_DisplayName}" />
                 <TextBlock Style="{StaticResource ExplanatoryTextBlockStyle}"
                            Text="{x:Static properties:Resources.SupportBackstagePage_WeCanHelp_Description}" />
                 <TextBlock Height="15" />
                 <TextBlock Style="{StaticResource Header2}"
                            Text="{Binding SupportHeader}" />
                 <TextBlock Style="{StaticResource ExplanatoryTextBlockStyle}"
                            Text="{Binding SupportText}"
                            TextAlignment="Justify"/>
                 <Grid>
                     <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="*" />
                     </Grid.ColumnDefinitions>
                     <Grid.RowDefinitions>
                         <RowDefinition Height="60" />
                         <RowDefinition />
                         <RowDefinition />
                     </Grid.RowDefinitions>
                     <TextBlock Style="{StaticResource Header2}"
                                Text="{x:Static properties:Resources.Contact_DisplayName}"
                                Grid.Column="0" Grid.Row="0" />
                     <TextBlock Text="{x:Static properties:Resources.Website_DisplayName}"
                                Grid.Column="0" Grid.Row="1"/>
                     <TextBlock Grid.Column="1" Grid.Row="1">
                         <Hyperlink NavigateUri="{Binding SupportWebsiteAddressUrl}"
                                    RequestNavigate="SupportWebsiteHyperlinkRequestNavigate"
                                    Style="{StaticResource HyperlinkStyle}">
                             <Run Text="{Binding Path=SupportWebsiteAddressUrl, Mode=OneWay}"/>
                         </Hyperlink>
                     </TextBlock>
                     <TextBlock Text="{x:Static properties:Resources.PhoneNumber_DisplayName}"
                                Grid.Column="0" Grid.Row="2"/>
                     <TextBlock Text="{Binding SupportPhoneNumber}"
                                Grid.Column="1" Grid.Row="2"/>
                 </Grid>
             </StackPanel>
             <Border Grid.Column="1" BorderBrush="{StaticResource BackgroundColorBrush}" BorderThickness="1 0 0 0" />
         </Grid>
    </DockPanel>
</UserControl>