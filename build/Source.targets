<Project>
  <PropertyGroup>
    <OutDir>$(OutputPath)</OutDir>
    <OutputPath>bin\$(Configuration)\</OutputPath>
  </PropertyGroup>
  <Import Project="$(SolutionDir)\build\Base.targets" />
  <PropertyGroup>
    <ContentSQLiteInteropFiles>false</ContentSQLiteInteropFiles>
    <CopySQLiteInteropFiles>false</CopySQLiteInteropFiles>
    <CleanSQLiteInteropFiles>false</CleanSQLiteInteropFiles>
    <CollectSQLiteInteropFiles>false</CollectSQLiteInteropFiles>
  </PropertyGroup>
  <Target Name="PostBuildCopyAssembly" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy /d/s/y $(OutDir)\$(AssemblyName).dll $(SolutionDir)\bin\$(Configuration)\Application\Built-in\Managed\Core\*" />
    <Exec Command="xcopy /d/s/y $(OutDir)\$(AssemblyName).pdb $(SolutionDir)\bin\$(Configuration)\Application\Built-in\Managed\Core\*" Condition="$(DefineConstants.Contains('DEBUG')) Or $(DefineConstants.Contains('RELEASEFORCODECOVERAGE'))" />
  </Target>
</Project>