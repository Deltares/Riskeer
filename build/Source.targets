<Project>
  <PropertyGroup>
    <OutDir>$(OutputPath)</OutDir>
    <OutputPath>bin\$(Configuration)\</OutputPath>
  </PropertyGroup>
  <Import Project="$(SolutionDir)build\Base.targets" />
  <PropertyGroup>
    <ContentSQLiteInteropFiles>false</ContentSQLiteInteropFiles>
    <CopySQLiteInteropFiles>false</CopySQLiteInteropFiles>
    <CleanSQLiteInteropFiles>false</CleanSQLiteInteropFiles>
    <CollectSQLiteInteropFiles>false</CollectSQLiteInteropFiles>
  </PropertyGroup>
  <Target Name="PostBuildCopyAssembly" AfterTargets="PostBuildEvent">
    <Exec Command=":loop
      xcopy /d/s/y &quot;$(OutDir)$(AssemblyName).dll&quot; &quot;$(SolutionDir)bin\$(Configuration)\Application\Built-in\Managed\Core\*&quot;
      if ErrorLevel 1 goto loop"/>
    <Exec Command=":loop
      xcopy /d/s/y &quot;$(OutDir)$(AssemblyName).pdb&quot; &quot;$(SolutionDir)bin\$(Configuration)\Application\Built-in\Managed\Core\*&quot;
      if ErrorLevel 1 goto loop" Condition="$(DefineConstants.Contains('DEBUG')) Or $(DefineConstants.Contains('RELEASEFORCODECOVERAGE'))"/>
  </Target>
</Project>