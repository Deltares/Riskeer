<Project>
  <PropertyGroup>
    <TestProjectType>UnitTest</TestProjectType>
    <OutputPath>$(SolutionDir)\bin\$(Configuration)\Test</OutputPath>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'ReleaseForCodeCoverage|x86'">
    <DebugType>none</DebugType>
  </PropertyGroup>
  <Import Project="$(SolutionDir)build\Base.targets" />
  <Target Name="CopyTestData" AfterTargets="Build">
    <ItemGroup>
      <MySourceFiles Include="$(ProjectDir)test-data\**\*.*"/>
    </ItemGroup>
    <Copy SourceFiles="@(MySourceFiles)"
	      DestinationFiles="@(MySourceFiles->'$(OutDir)test-data\$(ProjectName)\%(RecursiveDir)%(Filename)%(Extension)')"
		  SkipUnchangedFiles="true"/>
  </Target> 
</Project>