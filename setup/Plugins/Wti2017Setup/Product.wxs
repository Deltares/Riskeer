<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi"
     xmlns:netfx="http://schemas.microsoft.com/wix/NetFxExtension">
	<Product Id="C8F4EE7D-F2BA-4E1E-ABDB-C454FC68E780" Name="WTI 2017" Language="1033" Version="0.5.0" Manufacturer="Deltares" UpgradeCode="8c52b205-2bc3-4281-9d81-080fb1b2105d">
		<Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine" />
    <Media Id="1" Cabinet="Wti2017Full.cab" EmbedCab="yes"/>

		<MajorUpgrade DowngradeErrorMessage="A newer version of WTI 2017 is already installed." />

    <!-- Requirement: .Net framework 4.5 installed on machine -->
    <PropertyRef Id="NETFRAMEWORK45"/>
    <Condition Message='This setup requires Microsoft .NET Framework 4.5 package to be installed for this installation to continue.'>
      <![CDATA[Installed OR NETFRAMEWORK45]]>
    </Condition>

    <!-- File System hierarchy -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder" Name="PFiles">
        <Directory Id="Deltares" Name="Deltares">
          <Directory Id="INSTALLDIR" Name="WTI 2017">
            <Directory Id="APPLICATIONDIR" Name="application"/>
            
            <!--
            Wti2017Payload.wxs defines all files going into this folder. 
            Wti2017Payload.wxs will be generated on pre-build. Ensure you clean first before building the installer!
            -->

            <Component Id="InstalledShortcut" Guid="441A8BC7-0B13-453D-9FBB-F03293282A3D">
              <Shortcut Id="ApplicationInstallDirShortcut"
                        Name="WTI 2017"
                        Target="[APPLICATIONDIR]DeltaShell.Gui.exe"
                        WorkingDirectory="APPLICATIONDIR"
                        Icon="Wti2017.ico"/>

              <RemoveFolder Id="RemoveINSTALLDIR" Directory="INSTALLDIR" On="uninstall" />
              <RemoveFolder Id="RemoveDeltares" Directory="Deltares" On="uninstall" />
              <RegistryValue Root="HKCU" Key="Software\Deltares\WTI2017" Name="wti2017AppShortcutInstalled" Type="integer" Value="1" KeyPath="yes"/>
            </Component>
            
          </Directory>
        </Directory>
      </Directory>

      <!-- Start menu folder -->
      <Directory Id="ProgramMenuFolder" Name="Programs">
        <Directory Id="ProgramMenuDeltares" Name="Deltares">
          <Directory Id="ProgramMenuWti2017" Name="WTI 2017">
            
            <Component Id="ProgramMenuShortcut" Guid="1BF4BE48-FB81-425D-85E4-C30F1BF51DA4">
              <Shortcut Id="ApplicationStartMenuShortcut"
                        Name="WTI 2017"
                        Target="[APPLICATIONDIR]DeltaShell.Gui.exe"
                        WorkingDirectory="APPLICATIONDIR"
                        Icon="Wti2017.ico"/>
              
              <RemoveFolder Id="RemoveProgramMenuShortcut" Directory="ProgramMenuWti2017" On="uninstall" />
              <RemoveFolder Id="RemoveProgramMenuDeltares" Directory="ProgramMenuDeltares" On="uninstall" />
              <RegistryValue Root="HKCU" Key="Software\Deltares\WTI2017" Name="wti2017ProgMenuShortcutInstalled" Type="integer" Value="1" KeyPath="yes"/>
              
            </Component>
            
          </Directory>
        </Directory>
      </Directory>

      <!-- Desktop -->
      <Directory Id="DesktopFolder" Name="Desktop">

        <Component Id="DesktopShortcut" Guid="A871DE12-BE7D-4A80-86F6-5BA23249A8BB">
          <Shortcut Id="ApplicationDesktopShortcut"
                    Name="WTI 2017"
                    Target="[APPLICATIONDIR]DeltaShell.Gui.exe"
                    WorkingDirectory="APPLICATIONDIR"
                    Icon="Wti2017.ico"/>

          <RegistryValue Root="HKCU" Key="Software\Deltares\WTI2017" Name="wti2017DesktopShortcutInstalled" Type="integer" Value="1" KeyPath="yes"/>

        </Component>

      </Directory>
    </Directory>
    
		<Feature Id="CompleteInstallation" Title="Wti 2017" Level="1">
      <ComponentGroupRef Id="Wti2017ApplicationComponents"/>
      <ComponentRef Id="InstalledShortcut"/>
      <ComponentRef Id="ProgramMenuShortcut"/>
		</Feature>

    <Icon Id="Wti2017.ico" SourceFile="Wti2017.ico"/>
    
	</Product>
</Wix>