<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  
  <!--Basis elementen voor een bekledingen configuratie.-->
  <xs:include schemaLocation="BekledingenConfiguratieBasisSchema.xsd" />
  <xs:include schemaLocation="ConfiguratieSchema.xsd" />

  <!--Herdefinieer categoriegrens, zodat deze de juiste inhoud heeft.-->
  <xs:redefine schemaLocation="BekledingenConfiguratieBasisSchema.xsd">
    <xs:simpleType name="categoriegrensType">
      <xs:restriction base="categoriegrensType">
        <xs:enumeration value="A+"/>
        <xs:enumeration value="A"/>
        <xs:enumeration value="B"/>
        <xs:enumeration value="C"/>
      </xs:restriction>
    </xs:simpleType>
    <xs:complexType name="berekeningType">
      <xs:complexContent>
        <xs:extension base="berekeningType">
          <xs:all>
            <xs:element ref="typebekleding" minOccurs="0"/>
          </xs:all>
        </xs:extension>
      </xs:complexContent>
    </xs:complexType>
  </xs:redefine>

  <!--Specificeert de type bekleding voor de bepaling van de berekening.-->
  <xs:element name="typebekleding">
    <xs:simpleType>
      <xs:restriction base="xs:string">
        <xs:enumeration value="Steen (zuilen)"/>
        <xs:enumeration value="Steen (blokken)"/>
        <xs:enumeration value="Steen (blokken en zuilen)"/>
      </xs:restriction>
    </xs:simpleType>
  </xs:element>
</xs:schema>