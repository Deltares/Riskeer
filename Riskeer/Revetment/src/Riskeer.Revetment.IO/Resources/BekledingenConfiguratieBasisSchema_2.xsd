<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <!--Algemene structuur met configuratie, mappen en berekeningen.-->
  
  <!--Herdefinieer berekening, zodat deze de juiste inhoud heeft.-->
  <xs:redefine schemaLocation="ConfiguratieSchema.xsd">

    <xs:complexType name="configuratieType">
      <xs:complexContent>
        <xs:extension base="configuratieType">
          <xs:attribute name="versie" type="xs:int" use="required" fixed="2"/>
        </xs:extension>
      </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="berekeningType">
      <xs:complexContent>
        <xs:extension base="berekeningType">
          <xs:all>
            <xs:element ref="hblocatie" minOccurs="0"/>
            <xs:element ref="doelkans" minOccurs="0"/>
            <xs:element ref="bovengrensbekleding" minOccurs="0"/>
            <xs:element ref="ondergrensbekleding" minOccurs="0"/>
            <xs:element ref="bovengrenswaterstanden" minOccurs="0"/>
            <xs:element ref="ondergrenswaterstanden" minOccurs="0"/>
            <xs:element ref="stapgrootte" minOccurs="0"/>
            <xs:element ref="voorlandprofiel" minOccurs="0"/>
            <xs:element ref="orientatie" minOccurs="0"/>
            <xs:element ref="golfreductie" minOccurs="0"/>
            <xs:element ref="typebekleding" minOccurs="0"/>
          </xs:all>
        </xs:extension>
      </xs:complexContent>
    </xs:complexType>
  </xs:redefine>
  
  <!--Generieke definitie van de geselecteerde HB locatie voor alle faalmechanismen.-->
  <xs:include schemaLocation="HbLocatieSchema.xsd"/>

  <!--Generieke definitie voor de orientatie voor alle faalmechanismen.-->
  <xs:include schemaLocation="OrientatieSchema.xsd"/>

  <!--Generieke definitie voor het voorlandprofiel voor alle faalmechanismen.-->
  <xs:include schemaLocation="VoorlandProfielSchema.xsd"/>

  <!--Generieke definitie voor golfreducerende parameters voor alle faalmechanismen.-->
  <xs:include schemaLocation="GolfReductieSchema.xsd"/>

  <!--Elementen die specifiek voor dit faalmechanisme nodig zijn.-->

  <!--Specificeert de doelkans waarmee de berekening uitgevoerd moet worden.-->
  <xs:element name="doelkans">
    <xs:simpleType>
      <xs:restriction base="xs:double"/>
    </xs:simpleType>
  </xs:element>
  
  <!--Specificeert de bovengrens van de bekleding (of maximale berekeningsrange 
  voor het toetsen van de bekleding voor het specifieke faalmechanisme).-->
  <xs:element name="bovengrensbekleding">
    <xs:simpleType>
      <xs:restriction base="xs:double"/>
    </xs:simpleType>
  </xs:element>

  <!--Specificeert de ondergrens van de bekleding (of maximale berekeningsrange 
  voor het toetsen van de bekleding voor het specifieke faalmechanisme).-->
  <xs:element name="ondergrensbekleding">
    <xs:simpleType>
      <xs:restriction base="xs:double"/>
    </xs:simpleType>
  </xs:element>

  <!--Specificeert de bovengrens van de waterstanden waarin de gebruiker geinteresseerd is.-->
  <xs:element name="bovengrenswaterstanden">
    <xs:simpleType>
      <xs:restriction base="xs:double"/>
    </xs:simpleType>
  </xs:element>

  <!--Specificeert de ondergrens van de waterstanden waarin de gebruiker geinteresseerd is.-->
  <xs:element name="ondergrenswaterstanden">
    <xs:simpleType>
      <xs:restriction base="xs:double"/>
    </xs:simpleType>
  </xs:element>

  <!--Specificeert de stapgrootte voor bepaling van de door te rekenen waterstanden.-->
  <xs:element name="stapgrootte">
    <xs:simpleType>
       <xs:restriction base="xs:double">
        <xs:enumeration value="0.5"/>
        <xs:enumeration value="1.0"/>
        <xs:enumeration value="2.0"/>
        </xs:restriction>
    </xs:simpleType>
  </xs:element>

  <!--Specificeert de typebekleding waarvoor de berekening uitgevoerd moet worden.-->
  <xs:element name="typebekleding" type="bekledingType"/>

  <xs:simpleType name="bekledingType">
    <xs:restriction base="xs:string"/>
  </xs:simpleType>
  
</xs:schema>