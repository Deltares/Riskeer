<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <!--Algemene structuur met configuratie, mappen en berekeningen.-->

  <!--Generieke definitie van de geselecteerde HB locatie voor alle faalmechanismen.-->
  <xs:include schemaLocation="HbLocatieSchema.xsd"/>

  <!--Generieke definitie voor de orientatie voor alle faalmechanismen.-->
  <xs:include schemaLocation="OrientatieSchema.xsd"/>

  <!--Generieke definitie voor het voorlandprofiel voor alle faalmechanismen.-->
  <xs:include schemaLocation="VoorlandProfielSchema.xsd"/>

  <!--Generieke definitie voor golfreducerende parameters voor alle faalmechanismen.-->
  <xs:include schemaLocation="GolfReductieSchema.xsd"/>

  <!--Generieke definitie voor de standaardafwijking van een stochast.-->
  <xs:include schemaLocation="StochastStandaardafwijkingSchema.xsd"/>
  
  <!--Generieke definitie voor de variatiecoefficient van een stochast.-->
  <xs:include schemaLocation="StochastVariatiecoefficientSchema.xsd"/>

  <!--Elementen die specifiek voor dit faalmechanisme nodig zijn.-->
  
  <!--Specificeert het geselecteerde kunstwerk. De inhoud van dit element moet
  gelijk zijn aan een van de namen van de geÃ¯mporteerde kunstwerken voor 
  het betreffende faalmechanisme.-->
  <xs:element name="kunstwerk">
    <xs:simpleType>
      <xs:restriction base="xs:string">
        <xs:minLength value="1"/>
      </xs:restriction>
    </xs:simpleType>
  </xs:element>

  <!--Specificeert de faalkans van het kunstwerk gegeven erosie van de bodem.-->
  <xs:element name="faalkansgegevenerosiebodem">
    <xs:simpleType>
      <xs:restriction base="xs:double"/>
    </xs:simpleType>
  </xs:element>

  <!--Geeft aan of de illustratiepunten ingelezen moeten worden bij het uitvoeren van een berekening.-->
  <xs:element name="illustratiepunteninlezen">
    <xs:simpleType>
      <xs:restriction base="xs:boolean"/>
    </xs:simpleType>
  </xs:element>
</xs:schema>