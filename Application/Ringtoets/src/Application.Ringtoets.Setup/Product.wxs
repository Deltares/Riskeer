<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi"
     xmlns:netfx="http://schemas.microsoft.com/wix/NetFxExtension">
  <!-- GenerateVariables.wxi will be generated on pre-build. -->
  <?include GenerateVariables.wxi ?>
  <!-- Static variables. -->
  <?include Variables.wxi ?>
  
	<Product Id="*" Name="$(var.ApplicationFullName)" Language="1043" Version="$(var.FullReleaseVersion)" Manufacturer="!(loc.Manufacturer)" UpgradeCode="8c52b205-2bc3-4281-9d81-080fb1b2105d">
    <!--Comment left empty on purpose to remove auto-generated text.-->
		<Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine" Languages="1043" Manufacturer="!(loc.Manufacturer)" Comments=" "/>
    
    <Media Id="1" Cabinet="RingtoetsFull.cab" EmbedCab="yes"/>
    <Property Id="ARPPRODUCTICON" Value="Ringtoets.ico" />

    <MajorUpgrade DowngradeErrorMessage="!(loc.DowngradeErrorMessage)" AllowSameVersionUpgrades="yes"/>

    <!-- Specify default installer UI and which folder the user can configure during setup -->
    <UIRef Id="WixUI_Deltares"/>
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLDIR"/>
    <WixVariable Id="WixUIBannerBmp" Value="Banner_493x77.bmp" />
    <WixVariable Id="WixUIDialogBmp" Value="Start_493x312.bmp" />

    <!-- Requirement: .Net framework 4.0 installed on machine -->
    <PropertyRef Id="NETFRAMEWORK40FULL"/>
    <PropertyRef Id="NETFRAMEWORK40CLIENT"/>
    <Condition Message="!(loc.NetFramework40Required)">
      <![CDATA[Installed OR NETFRAMEWORK40FULL OR NETFRAMEWORK40CLIENT]]>
    </Condition>

    <!-- Request the common documents folder path -->
    <PropertyRef Id="WIX_DIR_COMMON_DOCUMENTS"/>

    <!-- File System hierarchy -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder" Name="PFiles">
        <Directory Id="WTI" Name="!(loc.ApplicationGroupShortName)">
          <Directory Id="INSTALLDIR" Name="$(var.ApplicationFullName)">
            <Directory Id="BINDIR" Name="bin">
            
              <!--
              RingtoetsPayload.wxs defines all files going into this folder. 
              ThirdPartyLicensesPayload.wxs defines all license files for all used 3rd party livrs.
              
              RingtoetsPayload.wxs and ThirdPartyLicensesPayload.wxs will be generated on pre-build. Ensure you clean first before building the installer!
              -->

            </Directory>
            
            <Component Id="FileAssociation" Guid="9EB4A417-2685-42DA-8167-6C726DC27349">
              <File Source="Ringtoets.ico" KeyPath="yes"></File>
              
              <RegistryValue Root="HKLM" Key="SOFTWARE\Classes\Ringtoets.rtd" Name="FriendlyTypeName" Value="!(loc.RtdDescription)" Type="string" />
              <ProgId Id="Ringtoets.rtd" Description="!(loc.RtdDescription)" Icon="Ringtoets.ico">
                <Extension Id="rtd" ContentType="application/rtd">
                  <Verb Id="open" TargetFile="fil758A597518BF1005624609D5C6DDF60D" Command="Open" Argument="&quot;%1&quot;"/>
                  <MIME ContentType="application/rtd" Default="yes" />
                </Extension>
              </ProgId>
              
            </Component>
            
            <Component Id="InstalledShortcut" Guid="441A8BC7-0B13-453D-9FBB-F03293282A3D">
              <Shortcut Id="ApplicationInstallDirShortcut"
                        Name="!(loc.ApplicationLongName)"
                        Description="!(loc.StartApplicationDescription)"
                        Target="[BINDIR]$(var.Application.Ringtoets.TargetFileName)"
                        WorkingDirectory="INSTALLDIR"
                        Icon="Ringtoets.ico"/>
              
              <RemoveFolder Id="RemoveBINDIR" Directory="BINDIR" On="uninstall"/>
              <RemoveFolder Id="RemoveINSTALLDIR" Directory="INSTALLDIR" On="uninstall" />
              <RemoveFolder Id="RemoveWTI" Directory="WTI" On="uninstall" />
              <RegistryValue Root="HKCU" Key="Software\!(loc.Manufacturer)\!(loc.ApplicationShortName)" Name="RingtoetsAppShortcutInstalled" Type="integer" Value="1" KeyPath="yes"/>
            </Component>
            
            <Component Id="LicenseFile" Guid="4D4EEEBE-E7C4-493D-89D2-901D149C1785">
              <File Id="RingtoetsLicense" Name="Licentie.rtf" Source="Licentie.rtf" KeyPath="yes"/>  
            </Component>

          </Directory>
        </Directory>
      </Directory>

      <!-- Start menu folder -->
      <Directory Id="ProgramMenuFolder" Name="Programs">
        <Directory Id="ProgramMenuWTI" Name="!(loc.ApplicationGroupShortName)">
          <Directory Id="ProgramMenuRingtoets" Name="!(loc.ApplicationLongName)">
            
            <Component Id="ProgramMenuShortcut" Guid="1BF4BE48-FB81-425D-85E4-C30F1BF51DA4">
              <Shortcut Id="ApplicationStartMenuShortcut"
                        Name="!(loc.ApplicationLongName)"
                        Description="!(loc.StartApplicationDescription)"
                        Target="[BINDIR]$(var.Application.Ringtoets.TargetFileName)"
                        WorkingDirectory="INSTALLDIR"
                        Icon="Ringtoets.ico"/>
              
              <RemoveFolder Id="RemoveProgramMenuShortcut" Directory="ProgramMenuRingtoets" On="uninstall" />
              <RemoveFolder Id="RemoveProgramMenuWTI" Directory="ProgramMenuWTI" On="uninstall" />
              <RegistryValue Root="HKCU" Key="Software\!(loc.Manufacturer)\!(loc.ApplicationShortName)" Name="RingtoetsProgMenuShortcutInstalled" Type="integer" Value="1" KeyPath="yes"/>
              
            </Component>
            
          </Directory>
        </Directory>
      </Directory>

      <!-- Desktop -->
      <Directory Id="DesktopFolder" Name="Desktop">

        <Component Id="DesktopShortcut" Guid="A871DE12-BE7D-4A80-86F6-5BA23249A8BB">
          <Shortcut Id="ApplicationDesktopShortcut"
                    Name="!(loc.ApplicationLongName)"
                    Description="!(loc.StartApplicationDescription)"
                    Target="[BINDIR]$(var.Application.Ringtoets.TargetFileName)"
                    WorkingDirectory="INSTALLDIR"
                    Icon="Ringtoets.ico"/>

          <RegistryValue Root="HKCU" Key="Software\!(loc.Manufacturer)\!(loc.ApplicationShortName)" Name="RingtoetsDesktopShortcutInstalled" Type="integer" Value="1" KeyPath="yes"/>

        </Component>

      </Directory>

      <!-- Common documents -->
      <Directory Id="WIX_DIR_COMMON_DOCUMENTS">
        <Directory Id="CommonDocumentsApplicationGroup" Name="!(loc.ApplicationGroupShortName)">
          <Directory Id="CommonDocumentsApplication" Name="!(loc.ApplicationShortName)">
            <Directory Id="CommonDocumentsNBPW" Name="NBPW">
              
              <Component Id="IHWFile" Guid="911042BC-FE0E-4A5A-819D-B43CCA0B9544">
                <File Source="IHW\voorbeeldbestand_nationaalBestandPrimaireWaterkeringen.dbf" ></File>
                <File Source="IHW\voorbeeldbestand_nationaalBestandPrimaireWaterkeringen.prj"></File>
                <File Source="IHW\voorbeeldbestand_nationaalBestandPrimaireWaterkeringen.qpj"></File>
                <File Source="IHW\voorbeeldbestand_nationaalBestandPrimaireWaterkeringen.shp"></File>
                <File Source="IHW\voorbeeldbestand_nationaalBestandPrimaireWaterkeringen.shx"></File>
                
                <RemoveFolder Id="RemoveCommonDocumentsNBPW" Directory="CommonDocumentsNBPW" On="uninstall" />
                <RemoveFolder Id="RemoveCommonDocumentsApplication" Directory="CommonDocumentsApplication" On="uninstall" />
              </Component>
              
            </Directory>
          </Directory>
        </Directory>
      </Directory>

    </Directory>
    
    
		<Feature Id="CompleteInstallation" Title="!(loc.ApplicationLongName)" Level="1" Absent="disallow" ConfigurableDirectory="INSTALLDIR" AllowAdvertise="no">
      <ComponentGroupRef Id="RingtoetsApplicationComponents"/>
      <ComponentGroupRef Id="ThirdPartyLicenseComponents"/>
      <ComponentRef Id="InstalledShortcut"/>
      <ComponentRef Id="ProgramMenuShortcut"/>
      <ComponentRef Id="DesktopShortcut"/>
      <ComponentRef Id="LicenseFile"/>
      <ComponentRef Id="IHWFile"/>
      <ComponentRef Id="FileAssociation"/>
		</Feature>

    <Icon Id="Ringtoets.ico" SourceFile="Ringtoets.ico"/>
    
	</Product>
</Wix>